{
  "cli": {
    "version": ">= 16.19.3",
    "appVersionSource": "remote"
  },
  "build": {
    "production": {
       "env": {
        "NODE_ENV": "production",
        "API_BASE_URL": "https://hercules.hesammarshal.ir"
      },
      "autoIncrement": true,
      "android": {
          "buildType": "apk",
          "gradleCommand": ":app:assembleRelease"
        },
       
      "ios": {
        "enterpriseProvisioning": "universal"
      }
      
      },

    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
       "env": {
        "NODE_ENV": "development",
        "API_BASE_URL": "http://localhost:3000"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    }
    
  },
  "submit": {
    "production": {}
  }
}
